---
import MyLink from '../components/MyLink';
import Layout from '../layouts/Layout.astro';
---

<Layout title='Vintage Clothing & Wallets | Etiuda Vintage'>
	<main class='w-full h-screen flex flex-col justify-around p-4'>
		

		<h1 class='text-4xl text-center'>Welcome to Etiuda Vintage website!</h1>

		<h2 class='text-2xl mt-12 text-center'>Follow us on:</h2>

		<ul class='flex justify-around items-center mt-12'>
			<MyLink url='https://www.instagram.com/etiudavintage' newTab={true} icon='instagram' />
			<MyLink url='https://www.etsy.com/pl/shop/EtiudaVintage' newTab={true} icon='etsy' />
		</ul>

		<section class='flex flex-col justify-center items-center gap-4 mt-48'>
			<h3 class='text-4xl'>Contact Us</h3>
			<a class='text-2xl underline uppercase font-serif hover:text-slate-400 transition-all duration-300' href='mailto:contact@etiudavintage.com'>contact@etiudavintage.com</a>
		</section>

	</main>
</Layout>

